@model List<Customer>

<h1>Users</h1>
<a class="button" asp-area="" asp-controller="Admin" asp-action="Index">Back</a>
<table>
  <thead>
    <tr>
      <th>Customer ID</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Birth Date</th>
      <th>Country</th>
      <th>Gender</th>
      <th>Age</th>
      <th>Edit</th>
    </tr>
  </thead>

  <tbody>
    @foreach (var x in Model)  {
    <tr>
      <td>@x.customer_ID</td>
      <td>@x.first_name</td>  
      <td>@x.last_name</td>   
      <td>@x.birth_date</td>
      <td>@x.country_of_residence</td>  
      <td>@x.gender</td>  
      <td>@x.age?.ToString("0.0")</td>
      <td>
        <a method="get" asp-controller="Admin" asp-action="EditUser" asp-route-userid="@x.customer_ID">
            <div style="background-color: #FFD700; border: solid; border-color: #E3000B; color: black; padding: 5px; text-align: center; text-decoration: none; display: inline-block; font-size: 12px; border-radius: 10px;">Edit/Delete</div>
        </a>
      </td>
    </tr>
        }
  </tbody>
</table>