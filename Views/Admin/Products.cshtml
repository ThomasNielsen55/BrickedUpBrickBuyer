@{
}
@model List<Product>

<h1>Product</h1>
<a class="button" asp-area="" asp-controller="Admin" asp-action="Index">Back</a>
<table>
  <thead>
    <tr>
      <th>Product ID</th>
      <th>Name</th>
      <th>Year</th>
      <th>Number of Parts</th>
      <th>Price</th>
      <th>Image Link</th>
      <th>Primary Color</th>
      <th>Secondary Color</th>
      <th>Description</th>
      <th>Category</th>
      <th>Edit</th>
    </tr>
  </thead>

  <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.ProductId</td>
                <td>@x.Name</td>  
                <td>@x.Year?.ToString()</td>  
                <td>@x.NumParts?.ToString()</td>  
                <td>@x.Price?.ToString()</td>  
                <td>@x.ImgLink</td>
                <td>@x.PrimaryColor</td>  
                <td>@x.SecondaryColor</td>  
                <td>@x.Description</td>
                <td>@x.Category</td>
                <td>
                    <a method="get" asp-controller="Admin" asp-action="EditProduct" asp-route-productid="@x.ProductId">
                        <div style="background-color: #FFD700; border: solid; border-color: #E3000B; color: black; padding: 5px; text-align: center; text-decoration: none; display: inline-block; font-size: 12px; border-radius: 10px;">Edit/Delete</div>
                    </a>
                </td>
            </tr>
        }
  </tbody>
</table>